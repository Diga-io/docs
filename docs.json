          },
          {
            "tab": "API reference",
            "openapi": "/api-reference/openapi.json"
          },
          {
            "tab": "Changelog",
            "pages": ["es/changelog"]
          }
        ]
      },
      {
        "language": "en",
        "tabs": [
          {
            "tab": "Documentation",
            "groups": [
              {
                "group": "Get Started",
                "pages": [
                  "en/index",
                  "en/create-agent"
                ]
              },
              {
                "group": "Build",
                "pages": [
                  {
                    "group": "Agents",
                    "pages": [
                      "en/build/agents/single-prompt",
                      {
                        "group": "Conversational Paths",
                        "pages": [
                          "en/build/agents/conversational-paths",
                          "en/build/agents/conversational-paths/node-types"
                        ]
                      },
                      "en/build/agents/call-customization",
                      "en/build/agents/version-control",
                      "en/build/agents/call-tools",
                      "en/build/agents/add-integrations",
											"en/build/agents/test-calls"
                    ]
                  },
                  {
                    "group": "Integrations",
                    "pages": [
                      "en/build/integrations/introduction",
                      "en/build/integrations/http-integrations",
                      "en/build/integrations/mcp-integrations"
                    ]
                  }
                ]
              },
              {
                "group": "Telephony",
                "pages": [
                  "en/telephony/buy-numbers",
                  {
                    "group": "SIP Trunks",
                    "pages": [
                      "en/telephony/sip-trunks",
                      "en/telephony/sip-trunks/twilio"
                    ]
                  }
                ]
              },
              {
                "group": "Platform",
                "pages": [
                  "en/platform/projects",
                  "en/platform/billing"
                ]
              },
              {
                "group": "Analytics",
                "pages": [
                  "en/deployment/monitoring-logs"
                ]
              }
            ]
          },
          {
            "tab": "API Reference",
            "openapi": "/api-reference/openapi.json"
          },
          {
            "tab": "Changelog",
            "pages": ["en/changelog"]
          }
        ]
      }
    ]
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["python", "javascript", "curl", "go"],
      "defaults": "all"
    }
  },
  "logo": {
    "light": "/logo/primary_iso.svg",
    "dark": "/logo/white_logo.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://www.diga.io/contact"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.diga.io"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/diga-agentes"
    }
  }
