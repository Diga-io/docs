                "pages": [
                  "es/index",
                  "es/crear-agente"
                ]
              },
              {
                "group": "Construir",
                "pages": [
                  {
                    "group": "Agentes",
                    "pages": [
                      "es/build/agentes/prompt-unico",
                      {
                        "group": "Caminos Conversacionales",
                        "pages": [
                          "es/build/agentes/camino-conversacional",
                          "es/build/agentes/camino-conversacional/tipos-nodos"
                        ]
                      },
                      "es/build/agentes/personalizacion-llamada",
                      "es/build/agentes/control-versiones",
                      "es/build/agentes/herramientas-llamada",
                      "es/build/agentes/anadir-integraciones",
											"es/build/agentes/llamadas-test"
                    ]
                  },
                  {
                    "group": "Integraciones",
                    "pages": [
                      "es/build/integraciones/introduccion",
                      "es/build/integraciones/integraciones-http",
                      "es/build/integraciones/integraciones-mcp"
                    ]
                  }
                ]
              },
              {
                "group": "Telefonía",
                "pages": [
                  "es/telefonia/comprar-telefonos",
                  {
                    "group": "Importar números mediante SIP Trunk",
                    "pages": [
                      "es/telefonia/sip-trunks",
                      "es/telefonia/sip-trunks/netelip",
                      "es/telefonia/sip-trunks/twilio"
                    ]
                  }
                ]
              },
              {
                "group": "Plataforma",
                "pages": [
                  "es/plataforma/facturacion"
