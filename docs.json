{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Diga",
  "colors": {
    "primary": "#343E96",
    "light": "#D7DAFF",
    "dark": "#343E96"
  },
  "background": {
    "color": {
      "light": "#FDFDFD",
      "dark": "#010318"
    }
  },
  "favicon": {
    "light": "/logo/fav-light.svg",
    "dark": "/logo/fav-dark.svg"
  },
  "fonts": {
    "heading": {
      "family": "Geist",
      "weight": 700
    },
    "body": {
      "family": "Sora",
      "weight": 400
    }
  },
  "icons": {
    "library": "lucide"
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Support",
          "href": "https://www.diga.io/contact",
          "icon": "message-square-share"
        }
      ]
    },
